extends ../../layouts/default
include ../../mixins/box-head.pug
block main
    .container.my-3
        include ../../partials/list-btn-users.pug
        .row
            .col-12
                +box-head("Lời mời kết bạn")
        .row(data-users-accept=user.id)
            each user in users
                .col-6(user-id=user.id)
                    .box-user
                        .inner-avatar
                            img(
                                src=user.avatar?user.avatar:"/images/avatar.jpg"
                                alt=user.fullName
                            )
                        .inner-info
                            .inner-name #{user.fullName}
                            .inner-buttons
                                button(
                                    class="btn btn-sm btn-primary mr-1"
                                    btn-accept-friend=user.id
                                ) Chấp nhận
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-refuse-friend=user.id
                                ) Xóa
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-deleted-friend
                                    disabled
                                ) Đã xóa
                                button(
                                    class="btn btn-sm btn-primary mr-1"
                                    btn-accepted-friend
                                    disabled
                                ) Đã chấp nhận
                                
    block script
        script(type="module" src="/Js/user.js")
