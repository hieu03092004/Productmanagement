        title #{pageTitle}
        link(link rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" )
        
        link(rel="stylesheet", href="/admin/css/style.css")

    body
        if(role.permissions.length>0)
            include ../partials/header.pug
